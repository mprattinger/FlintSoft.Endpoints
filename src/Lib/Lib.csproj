<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>FlintSoft.Endpoints</PackageId>

    <Authors>Michael Prattinger</Authors>
    <Description>This package contains Extensions to help with minimal api endpoints</Description>
    <PackageProjectUrl>https://github.com/mprattinger/FlintSoft.Endpoints</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- A list of tags to help the search engine to understand the content of the package -->
    <PackageTags>Minimal Api, Endpoints, library</PackageTags>

  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Routing.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.1" />
  </ItemGroup>

</Project>
